<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matadordefome"
    android:versionCode="1"
    android:versionName="1.0" > <!-- Permissões necessárias, adicione conforme necessário -->
    <!-- <uses-permission android:name="android.permission.INTERNET"/> -->
    <!-- Definindo a versão mínima e máxima da API -->
    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <permission
        android:name="com.example.matadordefome.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.matadordefome.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" /> <!-- Definindo a configuração da aplicação -->
    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Matadordefome" >

        <!-- Se não houver uma MainActivity, adicione a atividade inicial -->
        <!-- Aqui estou assumindo que a primeira atividade é a LoginActivity -->
        <activity
            android:name="com.example.matadordefome.LoginActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Matadordefome"
            android:windowSoftInputMode="adjustResize" >

            <!-- Definindo a activity como a principal -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.matadordefome.RegisterActivity" >
        </activity>
        <activity android:name="com.example.matadordefome.ProductListActivity" >
        </activity>
        <activity android:name="com.example.matadordefome.CategoryActivity" >
        </activity>
        <activity android:name="com.example.matadordefome.CartActivity" >
        </activity>
        <activity android:name="com.example.matadordefome.PaymentActivity" >
        </activity>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.matadordefome.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>